<Window x:Class="ReadLogs.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel Orientation="Horizontal">
        <Grid Width="509">
            <TextBox Text="{Binding LogFile.FileName}" HorizontalAlignment="Left" Height="23" Margin="100,44,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="160"/>
            <Label Content="File Name" HorizontalAlignment="Left" Margin="0,41,0,0" VerticalAlignment="Top" Width="100"/>
            <Button Command="{Binding UpdateCommand}" Content="Get Files" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
        </Grid>   

    </StackPanel>
</Window>
